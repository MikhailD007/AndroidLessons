<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherReport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalcButtonStyle">
        <item name="backgroundTint">@color/green_700</item>
    </style>

    <style name="CalcKeyboardStyle">
        <item name="backgroundColor">@color/white</item>
        <item name="android:horizontalSpacing">@dimen/spacing</item>
        <item name="android:verticalSpacing">@dimen/spacing</item>
        <item name="android:padding">@dimen/spacing</item>
    </style>

    <style name="TextInput">
        <item name="fontFamily">monospace</item>
        <item name="paddingStart">@dimen/spacing</item>
        <item name="backgroundTint">@color/yellow_200</item>
    </style>

    <style name="CalcIOTextView">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">@dimen/io_text_size</item>
        <item name="android:background">@color/yellow_200</item>
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light"/>

    <style name="AppThemeDark" parent="ThemeOverlay.MaterialComponents.Dark"/>
</resources>