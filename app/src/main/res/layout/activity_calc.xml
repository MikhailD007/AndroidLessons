<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calcConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.activities.CalcActivity">

    <TextView
        android:id="@+id/ioTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textSize="@dimen/io_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/small_margin"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ioTextView" />

    <FrameLayout
        android:id="@+id/keyboardFrame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_frame_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baseline" />

</androidx.constraintlayout.widget.ConstraintLayout>