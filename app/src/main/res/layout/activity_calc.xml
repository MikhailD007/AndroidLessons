<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calcConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.activities.CalcActivity">

    <TextView
        android:id="@+id/ioTextView"
        style="@style/CalcIOTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="end|bottom"
        tools:text="123456.2\n+\n26545"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/baseline" />

    <View
        android:id="@+id/baseline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baseline_thickness"
        android:layout_margin="@dimen/small_margin"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keyboardFrame" />

    <FrameLayout
        android:id="@+id/keyboardFrame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_frame_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>