<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherReport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalcButtonStyle">
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="CalcKeyboardStyle">
        <item name="backgroundColor">@color/black</item>
        <item name="android:horizontalSpacing">@dimen/spacing</item>
        <item name="android:verticalSpacing">@dimen/spacing</item>
        <item name="android:padding">@dimen/spacing</item>
    </style>

    <style name="TextInput">
        <item name="fontFamily">monospace</item>
        <item name="paddingStart">@dimen/spacing</item>
        <item name="backgroundTint">@color/yellow_900</item>
    </style>

    <style name="CalcIOTextView">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">@dimen/io_text_size</item>
        <item name="android:background">@color/yellow_900</item>
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>
</resources>